<% if @answer.errors.present? %>
  <% @answer.errors.full_messages.each do |message| %>
    <% flash[:error] = message %>
    $('.errors').html('<%= j flash_messages %>');
  <% end %>
<% else %>
  <% if @answer.id %>
    $('.answers').append('<%= j render 'questions/answer', answer: @answer %>');
    $('#answer_body').val('');
  <% end %>
<% end %>