<% if @answer.errors.present? %>
  <%= render "layouts/error", errors: @answer.errors %>
<% else %>
  $('.answer[data-id=<%= @answer.id %>]').remove();

  $('.set-best-link').removeClass('best disabled');
  $('.answers').prepend('<%= j render 'questions/answer', answer: @answer %>');
  $('.set-best-link[data-id=<%= @answer.id %>]').addClass('best disabled');
<% end %>